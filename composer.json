{
    "name": "atoms/httpclient",
    "description": "An implementation of PSR-18.",
    "homepage": "https://bitbucket.org/gotamedia/httpclient",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Pettersson",
            "email": "peter.pettersson@gotamedia.se"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR2 src",
        "analyze": "phpmd src text phpmd.xml; phan --output-mode text --color"
    },
    "autoload": {
        "psr-4": {
            "Atoms\\HttpClient\\": "src",
            "Psr\\Http\\Client\\": "src/Psr/Http/Client"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.gotamedia.se"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~3.3",
        "phpmd/phpmd": "~2.6",
        "phan/phan": "~1.1"
    },
    "config": {
        "secure-http": false
    }
}
